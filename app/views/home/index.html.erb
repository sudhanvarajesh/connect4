<html>
<head>
  <title>Login</title>
 
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playpen+Sans&family=Press+Start+2P&family=Roboto:ital,wght@1,100&display=swap" rel="stylesheet">
  <%= stylesheet_link_tag 'home', media: 'all' %>
</head>
<body>
  <div class="login-container">
  
      <center><h1 class="connect4"> connect4 </h1></center>
      <hr class="connect4-hr">
      <h2>Welcome to the Home Page</h2>
      
      
      <%= link_to 'Sign In', login_path, class: 'button' %>
      <%= link_to 'Sign Up', signup_path, class: 'button' %>
      <% flash.each do |key, message|%>
        <div class="alert">
          <%= message %>
        </div>
      <% end %>
  </div>
</body>
</html>
